<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ricardoz.retocreatic.InformacionUsuario">

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">



            <TextView
                android:text="Informacion Usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textStyle="bold"/>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                app:hintTextAppearance="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/contrasenaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textColor="@color/colorPrimary"
                    android:textCursorDrawable="@drawable/cusor_color"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/text_color_hint"
                    android:hint="*******"
                    />

            </android.support.design.widget.TextInputLayout>







            <Button
                android:id="@+id/btnVolverCambiarcontrasena"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:textSize="14sp"
                android:background="@drawable/button_redondo_oscuro"
                android:textColor="#fff"
                android:text="******"
                android:textAllCaps="true"
                />



        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
